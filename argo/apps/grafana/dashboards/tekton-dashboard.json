          "tooltip": {
            "mode": "single",
            "sort": "none"
          }
        },
        "targets": [
          {
            "expr": "sum(rate(tekton_pipelinerun_count{status=\"success\",namespace=\"samakia\"}[5m])) by (pipeline) / sum(rate(tekton_pipelinerun_count{namespace=\"samakia\"}[5m])) by (pipeline) * 100",
            "legendFormat": "{{pipeline}} Success Rate",
            "refId": "A"
          },
          {
            "expr": "sum(rate(tekton_pipelinerun_count{status=\"failed\",namespace=\"samakia\"}[5m])) by (pipeline) / sum(rate(tekton_pipelinerun_count{namespace=\"samakia\"}[5m])) by (pipeline) * 100",
            "legendFormat": "{{pipeline}} Failure Rate",
            "refId": "B"
          }
        ],
        "title": "Pipeline Success Rate",
        "type": "timeseries"
      },
